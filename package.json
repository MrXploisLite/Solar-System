{
  "name": "nasa-solar-system",
  "version": "3.0.0",
  "description": "Immersive 3D solar system with VR support, guided tours, advanced physics, and real-time data visualization",
  "type": "module",
  "author": "Romy Rianata",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrxploislite/nasa-solar-system"
  },
  "keywords": [
    "threejs",
    "webgl",
    "solar-system",
    "nasa",
    "space",
    "visualization",
    "bun"
  ],
  "scripts": {
    "dev": "bun run --hot src/server.ts",
    "build": "bun build src/server.ts --outdir ./dist --target bun",
    "start": "bun run dist/server.js",
    "serve": "bun run src/server.ts",
    "test": "bun test",
    "lint": "bun lint",
    "format": "bun format"
  },
  "dependencies": {
    "three": "^0.170.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.1",
    "@types/three": "^0.180.0",
    "bun-types": "latest"
  },
  "engines": {
    "bun": ">=1.3.0"
  },
  "bun": {
    "macros": {
      "three": "three"
    }
  }
}
